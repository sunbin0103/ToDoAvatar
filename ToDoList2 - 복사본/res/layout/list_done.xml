<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <Button
        android:id="@+id/button_check_done"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_weight="0"
        android:background="@drawable/check_done_selector" />

    <Button
        android:id="@+id/button_list_done"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10sp"
        android:gravity="left"
        android:textColor="@drawable/list_seletor"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/button_delete_done"
        android:layout_width="28sp"
        android:layout_height="9sp"
        android:layout_weight="0"
        android:layout_marginTop="8sp"
        android:layout_marginRight="1sp"
        android:background="@drawable/delete_selector" />

</LinearLayout>