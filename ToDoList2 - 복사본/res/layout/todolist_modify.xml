<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_modify_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#489CFF"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="할 일" />

    <EditText
        android:id="@+id/editText_modify_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="13" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_modify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#489CFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="기간" />

        <CheckBox
            android:id="@+id/checkBox_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기간 없음" />

    </LinearLayout>

    <Button
        android:id="@+id/button_modify_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_modify_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
